<!--[if IE 8 ]>
  <html class="ie8" lang="en">
  <![endif]-->
  <!--[if (gte IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
  <head>
    <meta charset="utf-8" />
    <!-- Uncomment to make IE8 render like IE7 -->
    <!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->
    <!-- Set the viewport width to device width for mobile -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%= favicon_link_tag 'favicon.ico' %>
    <title><%= content_for?(:title) ? yield(:title) : ENV["APP_TITLE"] %></title>
    <%= stylesheet_link_tag    "application" %>
    <%= stylesheet_link_tag    "animate.min" %>
    <%= javascript_include_tag "custom.modernizr" %>
    <%= csrf_meta_tags %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-12230872-9', 'ua.pt');
      ga('send', 'pageview');

    </script>
  </head>
  <body>
    <div class="off-canvas-wrap">
      <div class="inner-wrap">
        <div class="fixed">
          <nav class="top-bar animated fadeInDown">
            <ul class="title-area">
              <!-- Title Area -->
              <li class="name">
                <h1><a href="<%= root_url %>" class="logo icon-i2x"></a></h1>
              </li>
              <li class="toggle-topbar menu-icon"><a href="#" title="<%= ENV["APP_TITLE"] %>"><span>menu</span></a></li>
            </ul>
            <section class="top-bar-section application-nav">
              <ul class="right">
                <li class="has-tip radius" data-tooltip title="User"><a class="right-off-canvas-toggle icon-user" title="User"></a></li>
              </ul>
              <!-- Right Nav Section -->
              <ul class="right">
                <li data-tooltip class="has-tip radius" title="About"><%= link_to '', {:controller => '/about', :action => 'index'}, :class => 'icon-about' %></li>
                <li data-tooltip class="has-tip radius" title="Documentation"><%= link_to '', {:controller => '/docs'}, :class => 'icon-documentation' %></li>
                <li data-tooltip class="has-tip radius" title="Install"><%= link_to "", {:controller => '/docs', :action => 'show', :section => 'install', :topic => 'index'}, :class => 'icon-install' %></li>
              </ul>
            </section>
          </nav>
        </div><!-- End Top Bar -->
        <!-- Start main content -->
        <div class="row content animated fadeIn" id="content">
          <%= yield %>
        </div>
        <br />
        <!-- Finish main content -->
        <!-- User sidebar -->
        <aside class="right-off-canvas-menu side-user" id="sidebar">
          <%= render partial: "helper/sidenav"  %>
        </aside>
        <a class="exit-off-canvas"></a>
      </div>
    </div>
    <%= javascript_include_tag "application" %>

    <%= yield :javascript_includes %>
  </body>
</html>
