<div class="row">
  <div class="small-1 columns">
    <div class="right inline icon-properties xl-icon has-tip radius" data-tooltip class="has-tip" title="Connection Details">&nbsp;</div>
  </div>
  <div class="small-11 columns">
    <div class="row">
      <div class="small-3 columns">
        <strong class="right inline">URI</strong>
      </div>
      <div class="small-9 columns">
        <%= highlight_variables(template[:payload][:uri]) %>
      </div>
    </div>
    <div class="row">
      <div class="small-3 columns">
        <strong class="right inline">Message Type</strong>
      </div>
      <div class="small-9 columns">
        <%= template[:payload][:message] %>
      </div>
    </div>
    <div class="row">
      <div class="small-3 columns">
        <strong class="right inline">Content</strong>
      </div>
      <div class="small-9 columns">
        <%= highlight_variables(template[:payload][:content]) %>
      </div>
    </div>
    <div class="row">
      <div class="small-3 columns">
        <strong class="right inline">Method</strong>
      </div>
      <div class="small-9 columns">
        <%= highlight_variables(template[:payload][:method]) %>
      </div>
    </div>
    <% unless template.selectors.nil? then %>
    <% JSON.parse(template.selectors).each do |selector| %>
    <% selector.each do |k,v| %>
    <div class="row">
      <div class="small-3 columns">
        <strong class="right inline"><%= k %></strong>
      </div>
      <div class="small-9 columns">
        <%= highlight_variables(v) %>
      </div>
    </div>
    <% end %>
    <% end %>
    <% end %>
  </div>
</div>
